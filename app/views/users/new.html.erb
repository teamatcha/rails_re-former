<h1>New Form</h1>

<%= form_with model: @user do |form| %>
    <%= form.label :username %> <br>
    <%= form.text_field :username %> <br>
    <%= form.label :email %> <br>
    <%= form.email_field :email, placeholder: "abcd@gmail.com" %> <br>
    <%= form.label :password %> <br>
    <%= form.password_field :password %> <br>
    
    <%= form.submit %>
<% end %>


